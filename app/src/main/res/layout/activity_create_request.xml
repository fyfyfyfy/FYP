<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wegot.fuyan.fyp.CreateRequestActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Request"
        android:id="@+id/tv_request_title"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name:"
        android:textSize="20dp"
        android:id="@+id/textView1"
        android:layout_below="@+id/tv_request_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requirement:"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal:"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_below ="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration:"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_name_txt"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_requirement_txt"

        android:layout_alignRight="@+id/product_name_txt"

        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1"
        android:layout_below="@+id/textView1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/postal_code_txt"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toLeftOf="@+id/get_address_btn"
        android:layout_alignLeft="@+id/product_requirement_txt"
        android:layout_alignStart="@+id/product_requirement_txt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address_line_txt"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/postal_code_txt"
        android:layout_alignStart="@+id/postal_code_txt"
        android:layout_alignRight="@+id/product_requirement_txt"
        android:layout_alignEnd="@+id/product_requirement_txt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/request_duration_txt"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/address_line_txt"
        android:layout_alignStart="@+id/address_line_txt"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minutes"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/address_line_txt"
        android:layout_alignEnd="@+id/address_line_txt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/request_price_txt"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toStartOf="@+id/textView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SGD"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/request_price_txt"
        android:layout_toLeftOf="@+id/request_price_txt"
        android:layout_toStartOf="@+id/request_price_txt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/create_request_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Address"
        android:id="@+id/get_address_btn"
        android:layout_alignTop="@+id/postal_code_txt"
        android:layout_alignRight="@+id/product_requirement_txt"
        android:layout_alignEnd="@+id/product_requirement_txt"
        android:layout_toRightOf="@+id/create_request_btn"
        android:layout_toEndOf="@+id/create_request_btn"
        android:layout_alignBottom="@+id/postal_code_txt" />

</RelativeLayout>
