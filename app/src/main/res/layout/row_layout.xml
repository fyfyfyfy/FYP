<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id = "@+id/request_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        />
    
    <TextView
        android:id="@+id/request_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/request_image"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/request_requirement"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/request_title"
        android:gravity="center"
        android:layout_toRightOf="@+id/request_image"
        android:layout_toEndOf="@+id/request_image"
        android:textColor="@color/white"
        />
   <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/white"
       android:layout_below="@+id/request_image"
       ></View>


</RelativeLayout>